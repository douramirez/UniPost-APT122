generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String?
  email       String       @unique
  password    String?
  memberships Membership[]
  posts       Post[]       @relation("UserPosts")
}

model Organization {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  plan        String
  memberships Membership[]
  posts       Post[]
}

model Membership {
  id             Int          @id @default(autoincrement())
  userId         Int
  organizationId Int
  role           String
  user           User         @relation(fields: [userId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([userId, organizationId])
}

model Post {
  id             Int          @id @default(autoincrement())
  organizationId Int
  authorId       Int
  title          String
  body           String
  status         String
  mediaBase64    String?
  variants       Variant[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  author         User         @relation("UserPosts", fields: [authorId], references: [id])
  schedule       Schedule?
  metrics        Metric[] // ðŸ‘ˆ RelaciÃ³n inversa: un post puede tener muchas mÃ©tricas
}

model Schedule {
  id       Int      @id @default(autoincrement())
  postId   Int      @unique
  runAt    DateTime
  timezone String
  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Variant {
  id      Int    @id @default(autoincrement())
  postId  Int
  network String
  text    String
  status  String
  post    Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Metric {
  id          Int      @id @default(autoincrement())
  postId      Int
  network     String
  likes       Int      @default(0)
  comments    Int      @default(0)
  shares      Int      @default(0)
  impressions Int      @default(0)
  collectedAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}
