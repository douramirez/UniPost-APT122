generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  name           String?
  email          String           @unique
  password       String?
  emailVerified  DateTime?
  BlueSky_Access BlueSky_Access[]
  memberships    Membership[]
  posts          Post[]           @relation("UserPosts")
}

model Organization {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  plan        String
  memberships Membership[]
  posts       Post[]
}

model Membership {
  id             Int          @id @default(autoincrement())
  userId         Int
  organizationId Int
  role           String
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])

  @@unique([userId, organizationId])
}

model Post {
  id             Int          @id @default(autoincrement())
  organizationId Int
  authorId       Int
  title          String
  body           String
  status         String
  mediaBase64    String?
  creatorId      Int          @default(0)
  metrics        Metric[]
  author         User         @relation("UserPosts", fields: [authorId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  schedule       Schedule?
  variants       Variant[]
}

model Schedule {
  id       Int      @id @default(autoincrement())
  postId   Int      @unique
  runAt    DateTime
  timezone String
  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Variant {
  id        Int       @id @default(autoincrement())
  postId    Int
  network   String
  text      String
  status    String
  uri       String?
  date_sent DateTime? @db.Date
  time_sent DateTime? @db.Time(6)
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Metric {
  id          Int      @id @default(autoincrement())
  postId      Int
  network     String
  likes       Int      @default(0)
  comments    Int      @default(0)
  shares      Int      @default(0)
  impressions Int      @default(0)
  collectedAt DateTime @default(now())
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model RedSocial {
  id     Int    @id @default(autoincrement())
  nombre String @unique
}

model BlueSky_Access {
  id            Int    @id(map: "CuentaRedSocial_pkey") @unique @default(autoincrement())
  usuarioId     Int
  redSocialId   Int    @default(1)
  nombreUsuario String
  appPassword   String
  User          User   @relation(fields: [usuarioId], references: [id], map: "CuentaRedSocial_usuarioId_fkey")

  @@unique([usuarioId, redSocialId], map: "CuentaRedSocial_usuarioId_redSocialId_key")
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime
}
